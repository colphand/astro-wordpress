---
import MenuItem from "./MenuItem.astro";
import Menu from "./Menu.astro";

// https://codepen.io/JosephAllen/pen/yLJZdvO for the mobile menu
function toggleMenu() {
	document.getElementById("mobileMenu").classList.toggle("hidden");
}
---

<header class="absolute inset-x-0 top-0 z-50">
    <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
      <div class="flex lg:flex-1">
        <a href="/" class="-m-1.5 p-1.5">
          <span class="sr-only">ContactMonkey</span>
          <img class="h-8 w-auto" src="/src/assets/logo.svg" alt="">
        </a>
      </div>
      <div class="flex lg:hidden">
        <button type="button" onclick="toggleMenu()" id="main-menu" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>

      </div>
      
      <div class="hidden lg:flex lg:gap-x-12">
        <div class="dropdown dropdown-hover">
          <div tabindex="0" role="button" class="text-sm font-semibold leading-6 mb-3 text-gray-900">Features</div>
            <Menu></Menu>
        </div>
        <a href="/pricing" class="text-sm font-semibold leading-6 text-gray-900">Pricing</a>
        <a href="/customers" class="text-sm font-semibold leading-6 text-gray-900">Customers</a>
        <a href="/blog" data-astro-prefetch class="text-sm font-semibold leading-6 text-gray-900">Blog</a>
        
      </div>
      <div class="hidden lg:flex lg:flex-1 lg:justify-end">
        <a href="#" class="text-sm font-semibold leading-6 text-gray-900">Log in <span aria-hidden="true">&rarr;</span></a>
      </div>
    </nav>

  </header>