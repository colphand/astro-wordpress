---
const { customer } = Astro.props;
---

<article class="flex flex-col items-start">
  <div
    class="relative w-full overflow-hidden rounded-xl ring-1 ring-inset ring-gray-900/10"
  >
    <img
      src={customer?.customersFields?.customerStoryImage?.node?.mediaItemUrl}
      alt={customer?.customersFields?.customerStoryImage?.altText}
      srcset={customer?.customersFields?.customerStoryImage?.srcSet}
      loading="lazy"
      width={customer?.customersFields?.customerStoryImage?.mediaDetails?.width}
      height={customer?.customersFields?.customerStoryImage?.mediaDetails
        ?.height}
    />
  </div>
  <div class="max-w-xl">
    <div class="mt-8 flex items-center gap-x-4 text-xs">
      <!-- <span
        ><time datetime={customer.date}
          >{new Date(customer.date).toLocaleDateString()}</time
        >
      </span> -->
      <a
        class="no-underline relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100"
        href="#"
        >{customer.customersFields.customerIndustry}
      </a>
    </div>
    <div class="group relative">
      <h3
        class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600"
      >
        <a href={customer.uri} aria-label={customer.title}>
          {customer.title}
        </a>
      </h3>

      <div class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
        <p set:html={customer.customersFields.customerStoryDetails} />
      </div>
    </div>
  </div>
</article>
