---
export interface Props {
    post: {};
}


const { post } = Astro.props;
---


<article class="flex flex-col items-start justify-between">
    <div class="relative w-full">
      <img src={post._embedded['wp:featuredmedia']['0'].source_url} alt="" class="aspect-[16/9] w-full rounded-2xl bg-gray-100 object-cover sm:aspect-[2/1] lg:aspect-[3/2]">
      <div class="absolute inset-0 rounded-2xl ring-1 ring-inset ring-gray-900/10"></div>
    </div>
    <div class="max-w-xl">
      <div class="mt-8 flex items-center gap-x-4 text-xs">
        <time datetime="2020-03-16" set:html="post.date" class="text-gray-500"></time>
        <a href="#" class="relative z-10 rounded-full bg-gray-50 px-3 py-1.5 font-medium text-gray-600 hover:bg-gray-100">Marketing</a>
      </div>
      <div class="group relative">
        <h3 class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600" set:html="post.title.rendered">
          <a href={`/posts/${post.slug}/`}>
            <span class="absolute inset-0"></span>
          </a>
        </h3>
        <div class="mt-5 line-clamp-3 text-sm leading-6 text-gray-600">
        <p set:html="post.excerpt.rendered" ></p>
    </div>
      </div>
      <div class="relative mt-8 flex items-center gap-x-4">
        <div class="text-sm leading-6">
          <p class="font-semibold text-gray-900">
            <a href="#">
              <span class="absolute inset-0" set:html="post.yoast_head_json.author"></span>
            </a>
          </p>
        </div>
      </div>
    </div>
  </article>